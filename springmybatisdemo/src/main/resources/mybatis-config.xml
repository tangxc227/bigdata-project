<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <typeAliases>
        <typeAlias type="com.tangxc.springmybatis.domain.User" alias="_User" />
        <typeAlias type="com.tangxc.springmybatis.domain.Order" alias="_Order" />
        <typeAlias type="com.tangxc.springmybatis.domain.Item" alias="_Item" />
    </typeAliases>

    <!-- 引入映射文件 -->
    <mappers>
        <mapper resource="mapper/UserMapper.xml" />
        <mapper resource="mapper/OrderMapper.xml" />
    </mappers>
</configuration>